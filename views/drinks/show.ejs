<%- include('../partials/header') %>
<h1> <%=drink.name%> </h1>
    <ul>
        <% drink.comments.forEach(e => { %>
         <li>
            <%= e.content %>
            <br>
            <%= e.rating %>
        <% if (user && user._id.equals(e.user)) { %>
            <form id="delete-comment" action="/drinks/<%=drink._id%>/comments/<%=e._id%>?_method=DELETE" method="POST">
            <input type="submit" value="X">
            </form>
         
        <% } %>

         </li>
        <% }) %>
    </ul>
<% if (user) { %>
 

<form id="add-review-form" method="POST" action="/drinks/<%=drink._id%>/comments">
    <label>Comment:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
     <select name="rating">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
     </select>
     <input type="submit" value="Add Comment">
     <% } %>

</form>
<%- include('../partials/footer') %>