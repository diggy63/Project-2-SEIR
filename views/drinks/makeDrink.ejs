<%- include('../partials/header') %>

<div class="wrapperIngredients">
     <div class="leftWrapper">
     <div class="leftIngredients">
          <div id="innerContent">
               <div id="title"><%= newDrink.name %></div>
               <h3>add ingredients</h3>
               <input type="text" name="adder" id="newLiq" />
               <input type="text" name="adder" id="newAmount" />
               <br />
               <button class="btn" id="addIngred">ADD</button>

               
          </div>
          </div>
          <div class="wrapperSaveIngredients">
               <div id="innerContent">
               <div>
                    <h3>upload a pic</h3>
               </div>
